
public class Hand extends CardList {
	
	private CardGamePlayer player;
	protected CardList list;
	
	public Hand( CardGamePlayer player, CardList cards){
		cards.sort();
		this.list=cards;
		this.player = player;
	}
	
	public CardGamePlayer getPlayer(){
		return this.player;
	}
	
	public Card getTopCard(){
		return null;
	}
	
	public boolean beats(Hand hand){
		
		Hand [] testing = new Hand[8];
		
		testing[0] = new Flush(hand.player, hand.list);
		testing[1] = new FullHouse(hand.player, hand.list);
		testing[2] = new Pair(hand.player, hand.list);
		testing[3] = new Quad(hand.player, hand.list);
		testing[4] = new Single(hand.player, hand.list);
		testing[5] = new Straight(hand.player, hand.list);
		testing[6] = new StraightFlush(hand.player, hand.list);
		testing[7] = new Triple(hand.player, hand.list);
		
	}
	
	boolean isValid(){
		System.out.println("err");
		return false;
	}
	
	String getType(){
		System.out.println("err");
		return "err";
	}
}
