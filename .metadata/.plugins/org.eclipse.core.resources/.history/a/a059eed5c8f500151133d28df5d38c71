
public class Triple extends Hand {
	
	Triple(CardGamePlayer player, CardList cards){
		super(player, cards); 
	}	
	
	boolean isValid() {
		if(list.isEmpty()){//not empty
			return false;
		}else if(list.size() != 3){//size correct
			return false;
		}else{//check rank
			if( list.getCard(4).rank - list.getCard(0).rank == 4 || list.getCard(4).rank - list.getCard(0).rank == 12){
				return true;
			}else{
				return false;
			}
		}
	}

	String getType() {
		
		return "Triple";
	}

}
