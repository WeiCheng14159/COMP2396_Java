
public class Hand extends CardList {
	
	private CardGamePlayer player;
	protected CardList list;
	
	public Hand( CardGamePlayer player, CardList cards){
		cards.sort();
		this.removeAllCards();
		for( int i = 0 ; i < cards.size() ; i++){
			this.addCard(cards.getCard(i));
		}
		this.list=cards;
		this.player=player;
	}
	
	public CardGamePlayer getPlayer(){
		return this.player;
	}
	
	public Card getTopCard(){
		return null;
	}
	
	public boolean beats(Hand hand){//make sure that these two hands are all valid hands
		
		int handAType = 0;
		int handBType = 0;
		
		Hand [] others = new Hand[8];
		others[0] = new Single(hand.player, hand.list);
		others[1] = new Pair(hand.player, hand.list);
		others[2] = new Triple(hand.player, hand.list);
		
		others[3] = new Straight(hand.player, hand.list);
		others[4] = new Flush(hand.player, hand.list);
		others[5] = new FullHouse(hand.player, hand.list);
		others[6] = new Quad(hand.player, hand.list);
		others[7] = new StraightFlush(hand.player, hand.list);
		 
		Hand [] me = new Hand[8];
		me[0] = new Single(player, list);
		me[1] = new Pair(player, list);
		me[2] = new Triple(player, list);
		
		me[3] = new Straight(player, list);
		me[4] = new Flush(player, list);
		me[5] = new FullHouse(player, list);
		me[6] = new Quad(player, list);
		me[7] = new StraightFlush(player, list);
		
		for(int i = 0 ; i < 8 ; i++){
			if(others[i].isValid()){
				handAType = i;
				break;
			}
		}
		for(int i = 0 ; i < 8 ; i++){
			if(me[i].isValid()){
				handBType = i;
				break;
			}
		}
		
		if(handAType == handBType){//same card type, compare topcard
			BigTwoCard myTopCard = new BigTwoCard(me[handAType].getTopCard().suit, me[handAType].getTopCard().rank);
			BigTwoCard HisTopCard = new BigTwoCard(others[handBType].getTopCard().suit, others[handBType].getTopCard().rank);
			
			if( myTopCard.compareTo(HisTopCard) > 0){//my top card is bigger
				return true;
			}else{//my top card is smaller
				return false;
			}
		}else if( handAType >= 3 && handBType >=3){
			
		}
		else{//type mismatch
			return false;
		}	
	}
	
	boolean isValid(){
		Hand [] me = new Hand[8];
		int valid = -1;
		me[0] = new Flush(player, list);
		me[1] = new FullHouse(player, list);
		me[2] = new Pair(player, list);
		me[3] = new Quad(player, list);
		me[4] = new Single(player, list);
		me[5] = new Straight(player, list);
		me[6] = new StraightFlush(player, list);
		me[7] = new Triple(player, list);
		
		for(int i = 0 ; i < 8 ; i++){
			if(me[i].isValid()){
				valid = i;
				System.out.print("{"+me[i].getType()+"}  ");
				print();
				break;
			}
		}
		if(valid != -1 ){
			return true;
		}else{
			
			return false;
		}
	}
	
	String getType(){
		System.out.println("err");
		return "err";
	}
}
