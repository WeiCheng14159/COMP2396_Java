	@Override
	public int[] getSelected() {
		// TODO Auto-generated method stub
		ArrayList<Integer> seleIndices = new ArrayList<Integer>();
		for( int i = 0 ; i < selected.length ; i++){
			if(selected[i] == true){
				seleIndices.add(i);
			}
		}
		return seleIndices;
	}

