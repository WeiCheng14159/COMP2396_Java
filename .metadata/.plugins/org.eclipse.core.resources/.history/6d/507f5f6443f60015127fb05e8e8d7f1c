
public class Hand extends CardList {
	
	private CardGamePlayer player;
	protected CardList list;
	
	public Hand( CardGamePlayer player, CardList cards){
		cards.sort();
		this.removeAllCards();
		for( int i = 0 ; i < cards.size() ; i++){
			this.addCard(cards.getCard(i));
		}
		this.list=cards;
		this.player=player;
	}
	
	public CardGamePlayer getPlayer(){
		return this.player;
	}
	
	public Card getTopCard(){
		return null;
	}
	
	public boolean beats(Hand hand){//make sure that these two hands are all valid hands
		
		int myHandType = 0;
		int otherHandType = 0;
		
		Hand [] my = new Hand[8];
		my[0] = new Single(hand.player, hand.list);
		my[1] = new Pair(hand.player, hand.list);
		my[2] = new Triple(hand.player, hand.list);
		
		my[3] = new Straight(hand.player, hand.list);
		my[4] = new Flush(hand.player, hand.list);
		my[5] = new FullHouse(hand.player, hand.list);
		my[6] = new Quad(hand.player, hand.list);
		my[7] = new StraightFlush(hand.player, hand.list);
		 
		Hand [] other = new Hand[8];
		other[0] = new Single(player, list);
		other[1] = new Pair(player, list);
		other[2] = new Triple(player, list);
		
		other[3] = new Straight(player, list);
		other[4] = new Flush(player, list);
		other[5] = new FullHouse(player, list);
		other[6] = new Quad(player, list);
		other[7] = new StraightFlush(player, list);
		
		for(int i = 0 ; i < 8 ; i++){
			if(my[i].isValid()){
				myHandType = i;
				break;
			}
		}
		for(int i = 0 ; i < 8 ; i++){
			if(other[i].isValid()){
				otherHandType = i;
				break;
			}
		}
		
		if(myHandType == otherHandType){//same card type, compare topcard
			BigTwoCard myTopCard = new BigTwoCard(me[myHandType].getTopCard().suit, me[myHandType].getTopCard().rank);
			BigTwoCard HisTopCard = new BigTwoCard(others[otherHandType].getTopCard().suit, others[otherHandType].getTopCard().rank);
			
			if( myTopCard.compareTo(HisTopCard) > 0){//my top card is bigger
				return true;
			}else{//my top card is smaller
				return false;
			}
		}else if( myHandType >= 3 && otherHandType >=3){//five cards in a hand, and not the same type
			if(myHandType > otherHandType){
				
			}
		}
		else{//type mismatch
			return false;
		}	
	}
	
	boolean isValid(){
		Hand [] me = new Hand[8];
		int valid = -1;
		me[0] = new Flush(player, list);
		me[1] = new FullHouse(player, list);
		me[2] = new Pair(player, list);
		me[3] = new Quad(player, list);
		me[4] = new Single(player, list);
		me[5] = new Straight(player, list);
		me[6] = new StraightFlush(player, list);
		me[7] = new Triple(player, list);
		
		for(int i = 0 ; i < 8 ; i++){
			if(me[i].isValid()){
				valid = i;
				System.out.print("{"+me[i].getType()+"}  ");
				print();
				break;
			}
		}
		if(valid != -1 ){
			return true;
		}else{
			
			return false;
		}
	}
	
	String getType(){
		System.out.println("err");
		return "err";
	}
}
