	public BigTwo(){
		
		numOfPlayer=4;
		
		deck = new BigTwoDeck();
		deck.initialize();
		
		CardGamePlayer[] groupOfPlayer = new CardGamePlayer[numOfPlayer];
		int i = 0;
		for ( CardGamePlayer player : groupOfPlayer ){
			player.addCard(deck.getCard(i));
			this.playerList.add(player);
		}
		
		
		
		
	}
