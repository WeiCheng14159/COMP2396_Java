package lab06;

import java.util.ArrayList;
public class Teacher extends Person {
	ArrayList<String> teach;
	ArrayList<Student> student;
	
	Teacher(String id, String name, String gender)
	{
		this.setId(id);
		this.setName(name);;
		this.setGender(gender);;
	 	teach = new ArrayList<String>();
	 	student = new ArrayList<Student>();
	}
	
	void setCourses(ArrayList<String> c){
		teach=c;
	}
	
	void dropStudent(Student toBeDrop){
		if(student.contains(toBeDrop.getName())){
			System.out.println("drop suc");
			student.remove(toBeDrop);
		}else{
			System.out.println("drop fail");
		}
	}

	void addStudent(Student toBeAdd){
		if( !student.contains(toBeAdd.getName())){
			System.out.println("add suc");
			student.add(toBeAdd);
		}else{
			System.out.println("add fail");
		}
	}
	
	public void printInfo(){
		System.out.println("This is a teacher");
		System.out.println("Name: "+this.getName());
		System.out.println("Gender: "+this.getGender());
		
		String tmp = "Teach:";
		for(String s:teach){
			tmp = tmp + " "+s;
		}
		System.out.println(tmp);
	}
	
	
}
